
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>Todos los clientes</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Editar cliente</h2>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nombres</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Apellidos</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="Gappas Mucchi">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Genero</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Masculino" <%= user.gender == 'Masculino' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Masculino</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Femenino"  <%= user.gender == 'Femenino' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Femenino</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Estado</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Nuevo" <%= user.status == 'Trabajando' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Nuevo</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Casero" <%= user.status == 'Inactivo' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Casero</label>
            </div>
        </div>

        <div class="form-group">
            <label for="puesto" class="text-light">Producto</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="puesto" value="Produccion" <%= user.puesto == 'Pan' ? 'checked' : '' %> >
                <label for="radio-6" class="radio-label">Pan</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="puesto" value="Ventas" <%= user.puesto == 'Empanada' ? 'checked' : '' %> >
                <label for="radio-7" class="radio-label">Empanada</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="puesto" value="Produccion" <%= user.puesto == 'Pie de Manzana' ? 'checked' : '' %> >
                <label for="radio-6" class="radio-label">Pie de Manzana</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="puesto" value="Ventas" <%= user.puesto == 'Torta' ? 'checked' : '' %> >
                <label for="radio-7" class="radio-label">Torta</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Guardar</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
